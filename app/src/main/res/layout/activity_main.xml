<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E342E"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3E2723"
                app:title="BackGammon Royale"
                app:titleTextColor="#FFD700" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FFD700"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Main Menu"
                android:textColor="#E7D1B5"
                android:textSize="36sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#5D4037"
                android:text="Register"
                android:textColor="#FFD700"
                app:cornerRadius="10dp"
                app:strokeColor="#FFD700"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#5D4037"
                android:text="Login"
                android:textColor="#FFD700"
                app:cornerRadius="10dp"
                app:strokeColor="#FFD700"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnScoreList"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#5D4037"
                android:text="Leaderboard"
                android:textColor="#FFD700"
                app:cornerRadius="10dp"
                app:strokeColor="#FFD700"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:backgroundTint="#8B0000"
                android:text="Exit Game"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>