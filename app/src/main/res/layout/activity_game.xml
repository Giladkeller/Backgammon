<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E1B10"
    tools:context=".GameActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_card" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tab_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="#3E2723"
        app:cardCornerRadius="0dp"
        app:cardElevation="20dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3E2723"
            app:tabIndicatorColor="#FFD700"
            app:tabIndicatorHeight="4dp"
            app:tabIndicatorGravity="top"
            app:tabSelectedTextColor="#FFD700"
            app:tabTextAppearance="@style/CustomTabTextAppearance"
            app:tabTextColor="#A68966"
            app:tabRippleColor="#5D4037"
            app:tabMode="fixed"
            app:tabGravity="fill" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>